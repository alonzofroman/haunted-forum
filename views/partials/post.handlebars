<a href="/posts/{{id}}" class="post-card mb-2">
<div class="card w-100">

  <div class="card-body d-flex">
    <div>
      <img class="float-left" src="{{image_link}}" style="max-width:50px">
    </div>
    <div>
      <h5 class="card-title">{{title}}</h5>
      {{!-- <h6 class="card-subtitle mb-2 text-muted">{{user.username}}</h6> --}}
      <p class="card-text">{{body}}</p>
      <h6>Posted By: {{user.username}} on {{format_date creation_date}} {{format_time creation_date}}</h6>
    </div>

  </div>
</div>
</a>