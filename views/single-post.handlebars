<div class="container">

        <div class="card w-100">
            <div class="card-header"><h2>{{post.title}}</h2></div>
            <div class="card-body">
                <img class="float-left" src="{{post.image_link}}" style="max-width:50px">
                <h5 class="card-title">{{title}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{post.user.username}}</h6>
                <p class="card-text">{{post.body}}</p>
                <p>Date posted {{post.creation_date}}</p>
            </div>
        </div>
        {{#each comment as |comment|}}
        <div class="card w-100">
            <div class="card-header"><h3>{{comment.user.username}}</h3></div>
            <div class="card-body">
                <p>{{comment.body}}</p>
                <p>Date posted: {{comment.creation_date}}</p>    
            </div>
        
        </div>
        {{/each}}
    
</div>